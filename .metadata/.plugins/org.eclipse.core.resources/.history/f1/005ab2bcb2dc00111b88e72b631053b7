package cn.amose.yuzhong.convert;

import java.util.ArrayList;

import org.json.JSONArray;
import org.json.JSONException;
import org.json.JSONObject;

import cn.lmobile.sxgd.model.User;

public class UserJSONConvert {

	public static ArrayList<User> convertJsonArrayToItemList(
			JSONArray jsonArray) throws JSONException {
		int length = jsonArray.length();
		ArrayList<User> videoList = new ArrayList<User>();
		for (int i = 0; i < length; i++) {
			videoList.add(convertJsonToItem(jsonArray.getJSONObject(i)));
		}
		return videoList;
	}

	public static User convertJsonToItem(JSONObject json)
			throws JSONException {
		if (json.has("cid")) {
			return new User(json.getInt("cid"), json.getString("name"),
					json.getString("desc"), null);
		} else {
			return new User(json.getInt("lid"), json.getString("name"),
					null, json.getString("type"));
		}
	}
}
