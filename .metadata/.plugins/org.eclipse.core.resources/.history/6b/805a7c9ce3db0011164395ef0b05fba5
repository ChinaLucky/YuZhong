package cn.geemo.momkidsns.model;

import android.os.Parcel;
import android.os.Parcelable;

public class User implements Parcelable {
	public static final String INTENT_ACTION_USER = "user";
	private int mId;
	private String mLoginName;
	private String mNickname;
	private String mAvatarUrl;
	private int mAge;
	private int mGender;
	private int mPhotos;
	private int mFollowing;
	private int mFollower;
	private String mPassword;

	public User() {
	}

	public int getId() {
		return mId;
	}

	public void setId(int id) {
		this.mId = id;
	}

	public String getLoginName() {
		return mLoginName;
	}

	public String getNickname() {
		return mNickname;
	}

	public String getAvatarUrl() {
		return mAvatarUrl;
	}

	public int getAge() {
		return mAge;
	}

	public int getGender() {
		return mGender;
	}

	public void setLoginName(String loginName) {
		this.mLoginName = loginName;
	}

	public void setNickname(String nickname) {
		this.mNickname = nickname;
	}

	public void setAvatarUrl(String avatarUrl) {
		this.mAvatarUrl = avatarUrl;
	}

	/**
	 * unit week
	 * 
	 * @param age
	 */
	public void setAge(int age) {
		this.mAge = age;
	}

	/**
	 * male : 1, female : 0
	 * 
	 * @param gender
	 */
	public void setGender(int gender) {
		this.mGender = gender;
	}

	public int getPhotos() {
		return mPhotos;
	}

	public int getFollowing() {
		return mFollowing;
	}

	public int getFollower() {
		return mFollower;
	}

	public void setPhotos(int photos) {
		this.mPhotos = photos;
	}

	public void setFollowing(int following) {
		this.mFollowing = following;
	}

	public void setFollower(int follower) {
		this.mFollower = follower;
	}

	public String getPassword() {
		return mPassword;
	}

	public void setPassword(String password) {
		this.mPassword = password;
	}

	/** -----------parcelable-------- */
	@Override
	public int describeContents() {
		return 0;
	}

	@Override
	public void writeToParcel(Parcel dest, int flags) {
		dest.writeInt(mId);
		dest.writeString(mAvatarUrl);
		dest.writeString(mLoginName);
		dest.writeString(mNickname);
		dest.writeInt(mAge);
		dest.writeInt(mGender);
		dest.writeInt(mPhotos);
		dest.writeInt(mFollowing);
		dest.writeInt(mFollower);
		dest.writeString(mPassword);
	}

	public User(Parcel in) {
		mId = in.readInt();
		mAvatarUrl = in.readString();
		mLoginName = in.readString();
		mNickname = in.readString();
		mAge = in.readInt();
		mGender = in.readInt();
		mPhotos = in.readInt();
		mFollowing = in.readInt();
		mFollower = in.readInt();
		mPassword = in.readString();
	}

	public static final Parcelable.Creator<User> CREATOR = new Parcelable.Creator<User>() {
		public User createFromParcel(Parcel in) {
			return new User(in);
		}

		public User[] newArray(int size) {
			return new User[size];
		}
	};
}
